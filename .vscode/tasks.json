{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++14",
                "-o",
                "${fileBasenameNoExtension}.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "build and run cpp",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.out",
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": "build cpp",
        }
    ]
}